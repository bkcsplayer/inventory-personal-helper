# ============================================
# Nexus EAM - Production Environment Variables
# Copy this file to .env and modify the values
# ============================================

# Database
POSTGRES_USER=nexus
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=nexus_eam

# JWT Secret (generate a random string, e.g.: openssl rand -hex 32)
SECRET_KEY=your-random-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (replace with your NAS IP)
CORS_ORIGINS=http://192.168.1.100,http://your-nas-hostname

# Web port (change if port 80 is already in use on NAS)
WEB_PORT=80

# App
APP_NAME=Nexus EAM
DEFAULT_LANGUAGE=zh
TIMEZONE=America/Denver
